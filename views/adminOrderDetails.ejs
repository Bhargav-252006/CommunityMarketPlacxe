<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details | <%= community.name %> Manager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .status-badge {
            font-size: 0.75rem;
            padding: 6px 12px;
            font-weight: 600;
            border-radius: 30px;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            display: inline-flex;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .status-Processing {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .status-Shipped {
            background-color: #e0e7ff;
            color: #4338ca;
        }

        .status-Delivered {
            background-color: #d1fae5;
            color: #065f46;
        }

        .status-Cancelled {
            background-color: #fee2e2;
            color: #b91c1c;
        }

        .status-Pending {
            background-color: #fef3c7;
            color: #92400e;
        }

        .order-timeline {
            position: relative;
            padding-left: 45px;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 1.5rem;
            padding-left: 20px;
        }

        .timeline-item:before {
            content: '';
            position: absolute;
            left: -30px;
            top: 0;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: #fff;
            border: 2px solid #3498db;
            z-index: 1;
        }

        .timeline-item:after {
            content: '';
            position: absolute;
            left: -21px;
            top: 20px;
            height: 100%;
            width: 2px;
            background: #e9ecef;
        }

        .timeline-item:last-child:after {
            display: none;
        }

        .timeline-item.completed:before {
            background: #2ecc71;
            border-color: #2ecc71;
        }

        .timeline-item.current:before {
            background: #3498db;
            border-color: #3498db;
            box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.2);
        }

        .timeline-item.pending:before {
            background: #fff;
            border-color: #e9ecef;
        }

        .timeline-item.cancelled:before {
            background: #e74c3c;
            border-color: #e74c3c;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="bi bi-shop me-2"></i>
                <%= community.name %> Manager
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="bi bi-speedometer2 me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/community-carts">
                            <i class="bi bi-cart3 me-1"></i> Community Carts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/group-orders">
                            <i class="bi bi-box-seam me-1"></i> Group Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/all-orders">
                            <i class="bi bi-list-check me-1"></i> All Orders
                        </a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a href="/logout" class="btn btn-outline-light">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <% if (message) { %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="mb-0">Order Details</h2>
                            <div>
                                <a href="/admin/all-orders" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Back to Orders
                                </a>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>

                <div class="row">
                    <!-- Order Summary -->
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Order ID:</div>
                                    <div class="col-md-8"><code><%= order._id %></code></div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Order Date:</div>
                                    <div class="col-md-8">
                                        <%= new Date(order.createdAt).toLocaleString() %>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Customer:</div>
                                    <div class="col-md-8">
                                        <% if (order.customerId && order.customerId.name) { %>
                                            <%= order.customerId.name %><br>
                                                <small class="text-muted">
                                                    <%= order.customerId.email %>
                                                </small>
                                                <% } else { %>
                                                    <span class="text-muted">Unknown User</span>
                                                    <% } %>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Status:</div>
                                    <div class="col-md-8">
                                        <span class="status-badge status-<%= order.status %>">
                                            <i class="bi bi-circle-fill me-2" style="font-size: 0.6rem;"></i>
                                            <%= order.status %>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Items:</div>
                                    <div class="col-md-8">
                                        <%= order.items ? order.items.length : 0 %> items
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Total Amount:</div>
                                    <div class="col-md-8">â‚¹<%= order.totalAmount ? order.totalAmount.toFixed(2) : '0.00'
                                            %>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Group Order:</div>
                                    <div class="col-md-8">
                                        <% if (order.isGroupOrder && order.groupOrderId) { %>
                                            <a href="/admin/group-order/<%= order.groupOrderId._id || order.groupOrderId %>"
                                                class="badge bg-info text-decoration-none">
                                                Part of Group Order
                                            </a>
                                            <% } else { %>
                                                <span class="badge bg-light text-dark">Individual Order</span>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Status Timeline -->
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Order Status</h5>
                                <span class="badge bg-info text-white">Vendor Managed</span>
                            </div>
                            <div class="card-body">
                                <% if (statusNote) { %>
                                    <div class="alert alert-secondary mb-3">
                                        <i class="bi bi-info-circle-fill me-2"></i>
                                        <%= statusNote %>
                                    </div>
                                    <% } %>
                                        <div class="order-timeline">
                                            <% const statuses=['Pending', 'Processing' , 'Shipped' , 'Delivered' ];
                                                const currentStatusIndex=statuses.indexOf(order.status); if
                                                (order.status==='Cancelled' ) { %>
                                                <div class="timeline-item cancelled">
                                                    <h6>Order Cancelled</h6>
                                                    <p class="text-muted small mb-0">
                                                        <%= order.updatedAt ? new Date(order.updatedAt).toLocaleString()
                                                            : 'N/A' %>
                                                    </p>
                                                    <p>This order has been cancelled.</p>
                                                </div>
                                                <% } else { statuses.forEach((status, index)=> {
                                                    let itemClass = '';
                                                    if (index < currentStatusIndex) { itemClass='completed' ; } else if
                                                        (index===currentStatusIndex) { itemClass='current' ; } else {
                                                        itemClass='pending' ; } %>
                                                        <div class="timeline-item <%= itemClass %>">
                                                            <h6>
                                                                <%= status %>
                                                            </h6>
                                                            <p class="text-muted small mb-0">
                                                                <% if (index <=currentStatusIndex) { %>
                                                                    <%= index===currentStatusIndex ? new
                                                                        Date(order.updatedAt ||
                                                                        order.createdAt).toLocaleString() : 'Completed'
                                                                        %>
                                                                        <% } else { %>
                                                                            Pending
                                                                            <% } %>
                                                            </p>
                                                        </div>
                                                        <% })} %>
                                        </div>

                                        <div class="mt-4">
                                            <h6>Order Status Note</h6>
                                            <div class="alert alert-info">
                                                <i class="bi bi-info-circle me-2"></i> Order status updates are managed
                                                by the
                                                vendor and will be reflected here when they occur.
                                            </div>
                                        </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Order Items</h5>
                            </div>
                            <div class="card-body">
                                <% if (!order.items || order.items.length===0) { %>
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle me-2"></i> No items found in this order.
                                    </div>
                                    <% } else { %>
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Item</th>
                                                        <th>Vendor</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% order.items.forEach((item, index)=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= index + 1 %>
                                                            </td>
                                                            <td>
                                                                <% if (item.itemId) { %>
                                                                    <%= item.itemId.itemName || item.itemId.name
                                                                        || 'Unknown Item' %>
                                                                        <% } else { %>
                                                                            Unknown Item
                                                                            <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (item.itemId && item.itemId.vendorId) { %>
                                                                    <%= typeof item.itemId.vendorId==='object' ?
                                                                        (item.itemId.vendorId.businessName
                                                                        || 'Unknown Vendor' ) : 'Unknown Vendor' %>
                                                                        <% } else { %>
                                                                            Unknown Vendor
                                                                            <% } %>
                                                            </td>
                                                            <td>â‚¹<%= item.price ? item.price.toFixed(2) : '0.00' %>
                                                            </td>
                                                            <td>
                                                                <%= item.quantity %>
                                                            </td>
                                                            <td>â‚¹<%= (item.price * item.quantity).toFixed(2) %>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td colspan="5" class="text-end fw-bold">Order Total:</td>
                                                        <td class="fw-bold">â‚¹<%= order.totalAmount ?
                                                                order.totalAmount.toFixed(2) : '0.00' %>
                                                        </td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Actions -->
                <div class="row mb-5">
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Customer Actions</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex gap-2">
                                    <% if (order.customerId && order.status !=='Cancelled' ) { %>
                                        <a href="/admin/view-user-items/<%= order.customerId._id || order.customerId %>"
                                            class="btn btn-primary">
                                            <i class="bi bi-cart3 me-1"></i> View Customer's Cart
                                        </a>
                                        <% } %>
                                            <a href="/admin/all-orders" class="btn btn-outline-secondary">
                                                <i class="bi bi-arrow-left me-1"></i> Back to All Orders
                                            </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>