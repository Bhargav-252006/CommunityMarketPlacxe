                // Set initial counts
                updateCounts('all');

                // Category filter click event
                categoryCards.forEach(card => {
                    card.addEventListener('click', function () {
                        const category = this.getAttribute('data-category');

                        // Update active class on cards
                        categoryCards.forEach(c => c.querySelector('.category-card').classList.remove('active'));
                        this.querySelector('.category-card').classList.add('active');

                        // Filter products
                        filterProducts(category);

                        // Update category overview
                        updateCategoryOverview(category);
                    });
                });

                // Reset filter buttons
                resetButtons.forEach(button => {
                    button.addEventListener('click', function () {
                        // Reset active class
                        categoryCards.forEach(c => c.querySelector('.category-card').classList.remove('active'));
                        document.querySelector('[data-category="all"] .category-card').classList.add('active');

                        // Show all products
                        filterProducts('all');

                        // Update category overview
                        updateCategoryOverview('all');
                    });
                });

                // Function to filter products
                function filterProducts(category) {
                    let visibleCount = 0;

                    productItems.forEach(item => {
                        if (category === 'all' || item.dataset.category === category.replace(/['&,]/g, '').replace(/\s+/g, '-').toLowerCase()) {
                            item.style.display = 'block';
                            visibleCount++;
                        } else {
                            item.style.display = 'none';
                        }
                    });

                    // Show/hide empty state message
                    if (visibleCount === 0) {
                        noProductsMessage.style.display = 'block';
                    } else {
                        noProductsMessage.style.display = 'none';
                    }

                    return visibleCount;
                }

                // Function to update category overview
                function updateCategoryOverview(category) {
                    let displayName = category === 'all' ? 'All Items' : category;
                    currentCategoryTitle.textContent = displayName;

                    updateCounts(category);
                }

                // Function to update item and vendor counts
                function updateCounts(category) {
                    // Count visible items
                    let itemCount = 0;
                    let vendorIds = new Set();

                    productItems.forEach(item => {
                        if (category === 'all' || item.dataset.category === category.replace(/['&,]/g, '').replace(/\s+/g, '-').toLowerCase()) {
                            itemCount++;
                            // Extract vendor ID from data attribute
                            const vendorId = item.querySelector('.product-card').getAttribute('data-vendor-id');
                            if (vendorId) {
                                vendorIds.add(vendorId);
                            }
                        }
                    });

                    // Update badges
                    itemCountBadge.textContent = itemCount;
                    vendorCountBadge.textContent = vendorIds.size;
                }

                // Horizontal scroll for category cards
                const scrollContainer = document.querySelector('.category-scroll-container');
                const scrollLeftBtn = document.querySelector('.scroll-left');
                const scrollRightBtn = document.querySelector('.scroll-right');

                if (scrollLeftBtn && scrollRightBtn) {
                    scrollLeftBtn.addEventListener('click', () => {
                        scrollContainer.scrollBy({ left: -200, behavior: 'smooth' });
                    });

                    scrollRightBtn.addEventListener('click', () => {
                        scrollContainer.scrollBy({ left: 200, behavior: 'smooth' });
                    });
                }
            });
