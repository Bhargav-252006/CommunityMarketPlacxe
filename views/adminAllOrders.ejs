                                                                        <% if (order.isGroupOrder && order.groupOrderId)
                                                                            { %>
                                                                            <a href="/admin/group-order/<%= order.groupOrderId._id || order.groupOrderId %>"
                                                                                class="badge bg-info text-decoration-none">
                                                                                Group Order
                                                                            </a>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="badge bg-light text-dark">Individual</span>
                                                                                <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.updatedAt ? new
                                                                            Date(order.updatedAt).toLocaleDateString()
                                                                            : 'N/A' %>
                                                                    </td>
                                                                </tr>
                                                                <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <% } %>
                                    </div>

                                    <!-- Pending Orders Tab -->
                                    <div class="tab-pane fade" id="pending" role="tabpanel"
                                        aria-labelledby="pending-tab">
                                        <% if (!ordersByStatus.Pending || ordersByStatus.Pending.length===0) { %>
                                            <div class="alert alert-info">
                                                <i class="bi bi-info-circle me-2"></i> No pending orders found.
                                            </div>
                                            <% } else { %>
                                                <div class="table-responsive">
                                                    <!-- Pending orders table -->
                                                    <table class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>Order ID</th>
                                                                <th>User</th>
                                                                <th>Date</th>
                                                                <th>Items</th>
                                                                <th>Total</th>
                                                                <th>Group Order</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% ordersByStatus.Pending.forEach(order=> { %>
                                                                <tr>
                                                                    <td>
                                                                        <a href="/admin/order/<%= order._id %>"
                                                                            class="text-decoration-none">
                                                                            <code><%= order._id.toString().substring(0, 8) %></code>
                                                                            <i
                                                                                class="bi bi-box-arrow-up-right ms-1 small text-muted"></i>
                                                                        </a>
                                                                    </td>
                                                                    <td>
                                                                        <% if (order.customerId &&
                                                                            order.customerId.name) { %>
                                                                            <%= order.customerId.name %>
                                                                                <% } else { %>
                                                                                    <span class="text-muted">Unknown
                                                                                        User</span>
                                                                                    <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <%= new
                                                                            Date(order.createdAt).toLocaleDateString()
                                                                            %>
                                                                    </td>
                                                                    <td>
                                                                        <%= order.items ? order.items.length : 0 %>
                                                                            items
                                                                    </td>
                                                                    <td>₹<%= order.totalAmount ?
                                                                            order.totalAmount.toFixed(2) : '0.00' %>
                                                                    </td>
                                                                    <td>
                                                                        <% if (order.isGroupOrder && order.groupOrderId)
                                                                            { %>
                                                                            <a href="/admin/group-order/<%= order.groupOrderId._id || order.groupOrderId %>"
                                                                                class="badge bg-info text-decoration-none">
                                                                                Group Order
                                                                            </a>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="badge bg-light text-dark">Individual</span>
                                                                                <% } %>
                                                                    </td>
                                                                </tr>
                                                                <% }); %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Auto-refresh the page every 2 minutes to show new orders
            setTimeout(function () {
                window.location.reload();
            }, 120000);
        });
    </script>
</body>

</html>