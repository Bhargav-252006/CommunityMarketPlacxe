<!-- views/partials/vendor/featured-items.ejs -->
<% if (items && items.length> 0) { %>
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-star me-2 text-warning"></i> Featured Products</h4>
            <button class="btn btn-sm btn-outline-primary" onclick="toggleFeaturedItems()">Manage Featured</button>
        </div>
        <div class="card-body">
            <div class="row">
                <% // Get top 4 items by popularity or manually featured %>
                    <% const featuredItems=items.slice(0, 4); %>
                        <% featuredItems.forEach(item=> { %>
                            <div class="col-md-3 col-sm-6 mb-3">
                                <div class="card h-100">
                                    <div class="position-relative">
                                        <% if (item.imageUrl) { %>
                                            <img src="<%= item.imageUrl %>" alt="<%= item.itemName %>"
                                                class="card-img-top" style="height: 150px; object-fit: cover;">
                                            <% } else { %>
                                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                    style="height: 150px;">
                                                    <i class="fas fa-box fa-3x text-muted"></i>
                                                </div>
                                                <% } %>
                                                    <span
                                                        class="badge bg-warning position-absolute top-0 end-0 m-2">Featured</span>
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">
                                            <%= item.itemName %>
                                        </h5>
                                        <p class="card-text text-success fw-bold">â‚¹<%= item.costPerUnit.toFixed(2) %>
                                        </p>
                                        <div class="mt-auto">
                                            <a href="/vendor/items/edit/<%= item._id %>"
                                                class="btn btn-sm btn-primary w-100">Edit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
            </div>
        </div>
    </div>
    <% } %>