<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-bolt me-2 text-warning"></i> Quick Actions</h5>
    </div>
    <div class="card-body">
        <div class="row g-2">
            <div class="col-md-4 col-6">
                <a href="#" class="btn btn-primary d-flex flex-column align-items-center p-3 h-100 w-100"
                    data-bs-toggle="modal" data-bs-target="#addItemModal">
                    <i class="fas fa-plus-circle fa-2x mb-2"></i>
                    <span>Add Item</span>
                </a>
            </div>
            <div class="col-md-4 col-6">
                <a href="/vendor/orders" class="btn btn-success d-flex flex-column align-items-center p-3 h-100 w-100">
                    <i class="fas fa-truck fa-2x mb-2"></i>
                    <span>Manage Orders</span>
                </a>
            </div>
            <div class="col-md-4 col-6">
                <a href="/vendor/items" class="btn btn-warning d-flex flex-column align-items-center p-3 h-100 w-100">
                    <i class="fas fa-clipboard-list fa-2x mb-2"></i>
                    <span>Inventory</span>
                </a>
            </div>
            <div class="col-md-4 col-6">
                <a href="/vendor/settings"
                    class="btn btn-secondary d-flex flex-column align-items-center p-3 h-100 w-100">
                    <i class="fas fa-cog fa-2x mb-2"></i>
                    <span>Settings</span>
                </a>
            </div>
            <div class="col-md-4 col-6">
                <a href="#" class="btn btn-danger d-flex flex-column align-items-center p-3 h-100 w-100"
