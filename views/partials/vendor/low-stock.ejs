<!-- views/partials/vendor/low-stock.ejs -->
<% if (items && items.length> 0) { %>
    <% const lowStockItems=items.filter(item=> item.itemQuantity < 10); %>
            <% if (lowStockItems.length> 0) { %>
                <div class="card mb-4">
                    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i> Low Stock Alert</h4>
                        <span class="badge bg-light text-danger">
                            <%= lowStockItems.length %> items need attention
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% lowStockItems.slice(0, 4).forEach(item=> { %>
                                <div class="col-md-3 col-sm-6 mb-3">
                                    <div class="card h-100 border-danger">
                                        <div class="position-relative">
                                            <% if (item.imageUrl) { %>
                                                <img src="<%= item.imageUrl %>" alt="<%= item.itemName %>"
                                                    class="card-img-top" style="height: 150px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                        style="height: 150px;">
                                                        <i class="fas fa-box fa-3x text-muted"></i>
                                                    </div>
                                                    <% } %>
                                                        <div
                                                            class="position-absolute bottom-0 start-0 w-100 bg-danger text-white p-2 text-center">
                                                            <strong>
                                                                <%= item.itemQuantity %>
                                                                    <%= item.unit %> left
                                                            </strong>
                                                        </div>
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">
                                                <%= item.itemName %>
                                            </h5>
                                            <p class="card-text text-success fw-bold">â‚¹<%= item.costPerUnit.toFixed(2)
                                                    %>
                                            </p>
                                            <div class="mt-auto d-flex">
                                                <a href="/vendor/items/edit/<%= item._id %>"
                                                    class="btn btn-sm btn-danger w-100">Restock Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>
                    <% } %>