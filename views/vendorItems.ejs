<%- include('partials/header') %>

    <style>
        /* Color Variables - matching with dashboard */
        :root {
            --main-color: #3a7ca5;
            --accent-color: #ee6c4d;
            --success-color: #4c9f70;
            --warning-color: #f39c12;
            --info-color: #3498db;
            --danger-color: #e74c3c;
            --light-color: #f9f9f9;
            --dark-color: #2c3e50;
            --subtle-color: #f5f7fa;
        }

        /* Shop Hero Section */
        .shop-hero {
            background: linear-gradient(135deg, rgba(58, 124, 165, 0.8), rgba(58, 124, 165, 0.6)), url('https://images.unsplash.com/photo-1604719312566-8912e9c8a213?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fGZhcm0lMjBwcm9kdWNlfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=900&q=60');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
            border-radius: 0.5rem;
            position: relative;
        }

        .shop-hero::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.1) 100%);
            border-radius: 0.5rem;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        /* Product Cards */
        .product-card {
            border: none;
            transition: all 0.3s ease;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .product-img-container {
            position: relative;
            overflow: hidden;
            height: 220px;
        }

        .product-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card:hover .product-img {
            transform: scale(1.05);
        }

        .product-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.2);
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .product-card:hover .product-overlay {
            opacity: 1;
        }

        .quick-view-btn {
            background: white;
            color: var(--dark-color);
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-weight: 500;
            transform: translateY(20px);
            opacity: 0;
            transition: all 0.3s ease;
        }

        .product-card:hover .quick-view-btn {
            transform: translateY(0);
            opacity: 1;
        }

        .product-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 2;
            padding: 0.25rem 0.75rem;
            border-radius: 2rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .product-details {
            padding: 1.25rem;
        }

        .product-vendor {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .vendor-badge {
            width: 26px;
            height: 26px;
            border-radius: 50%;
            background-color: var(--main-color);
            color: white;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.5rem;
            font-weight: 600;
            font-size: 0.75rem;
        }

        .product-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--dark-color);
        }

        .product-description {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            max-height: 60px;
            overflow: hidden;
        }

        .product-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .product-price {
            color: var(--accent-color);
            font-weight: 700;
            font-size: 1.25rem;
        }

        .product-unit {
            color: #6c757d;
            font-size: 0.85rem;
        }

        .product-stock {
            font-size: 0.85rem;
            color: var(--success-color);
        }

        .product-actions {
            margin-top: auto;
        }

        .quantity-control {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .quantity-label {
            margin-right: 0.5rem;
            font-weight: 500;
            flex: 0 0 auto;
        }

        .quantity-input-group {
            display: flex;
            width: 100%;
        }

        .quantity-btn {
            background-color: var(--subtle-color);
            border: 1px solid #dee2e6;
            color: var(--dark-color);
            width: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            cursor: pointer;
            user-select: none;
        }

        .quantity-input {
            border-radius: 0;
            text-align: center;
            border-left: 0;
            border-right: 0;
        }

        .add-to-cart-btn {
            background-color: var(--accent-color);
            color: white !important;
            font-weight: 700;
            padding: 0.75rem 1.25rem !important;
            border-radius: 0.25rem;
            display: flex !important;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(238, 108, 77, 0.4) !important;
            margin-top: 15px !important;
            opacity: 1 !important;
            visibility: visible !important;
            border: none !important;
            width: 100% !important;
            font-size: 1.1rem !important;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            z-index: 10;
        }

        .add-to-cart-btn:hover:not(:disabled) {
            background-color: #d95c3e;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(238, 108, 77, 0.5) !important;
        }

        .add-to-cart-btn:disabled {
            background-color: #e0e0e0;
            color: #a0a0a0 !important;
            cursor: not-allowed;
            box-shadow: none;
        }

        .add-to-cart-btn i {
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        /* Category Pills */
        .category-filters {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            padding-bottom: 1rem;
            margin-bottom: 1.5rem;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .category-filters::-webkit-scrollbar {
            display: none;
        }

        .category-pill {
            flex: 0 0 auto;
            padding: 0.5rem 1.25rem;
            margin-right: 0.5rem;
            background-color: var(--subtle-color);
            border-radius: 2rem;
            color: var(--dark-color);
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 1px solid transparent;
        }

        .category-pill:hover,
        .category-pill.active {
            background-color: var(--main-color);
            color: white;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .shop-hero {
                padding: 2rem 0;
            }

            .shop-title {
                font-size: 1.75rem;
            }

            .product-meta {
                flex-direction: column;
                align-items: flex-start;
            }

            .product-stock {
                margin-top: 0.5rem;
            }
        }

        @media (max-width: 576px) {
            .shop-hero {
                padding: 1.5rem 0;
            }

            .shop-title {
                font-size: 1.5rem;
            }
        }

        /* Search and Sort Styles */
        .search-bar {
            position: relative;
        }

        .rounded-pill-start {
            border-top-left-radius: 50rem !important;
            border-bottom-left-radius: 50rem !important;
            border-top-right-radius: 0 !important;
            border-bottom-right-radius: 0 !important;
            padding-left: 1.5rem;
            height: 50px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .rounded-pill-end {
            border-top-right-radius: 50rem !important;
            border-bottom-right-radius: 50rem !important;
            border-top-left-radius: 0 !important;
            border-bottom-left-radius: 0 !important;
            padding-right: 1.5rem;
            height: 50px;
            background-color: var(--main-color);
            border-color: var(--main-color);
        }

        .rounded-pill-end:hover {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .search-suggestions {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-height: 300px;
            overflow-y: auto;
            z-index: 1000;
            display: none;
            margin-top: 8px;
        }

        .search-suggestions.active {
            display: block;
        }

        .suggestion-item {
            padding: 10px 15px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .suggestion-item:last-child {
            border-bottom: none;
        }

        .suggestion-item:hover {
            background-color: #f5f7fa;
        }

        .suggestion-img {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 5px;
            margin-right: 10px;
        }

        .suggestion-text {
            flex: 1;
        }

        .suggestion-name {
            font-weight: 500;
            margin-bottom: 2px;
        }

        .suggestion-category {
            font-size: 0.8rem;
            color: #6c757d;
        }

        .suggestion-price {
            font-weight: 600;
            color: var(--accent-color);
            white-space: nowrap;
        }

        /* Form Select Styling */
        .form-select {
            height: 50px;
            border-radius: 50rem;
            padding-left: 1.5rem;
            background-color: white;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            border: 1px solid #dee2e6;
            font-weight: 500;
            cursor: pointer;
        }

        .form-select:focus {
            border-color: var(--main-color);
            box-shadow: 0 0 0 0.25rem rgba(58, 124, 165, 0.25);
        }

        /* Featured Carousel Styles */
        #featuredCarousel {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            background-color: white;
            padding: 20px;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 40px;
            height: 40px;
            background-color: rgba(58, 124, 165, 0.8);
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
            opacity: 0.8;
        }

        .carousel-control-prev {
            left: 10px;
        }

        .carousel-control-next {
            right: 10px;
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            opacity: 1;
            background-color: var(--accent-color);
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            width: 20px;
            height: 20px;
        }

        .highlight-product {
            animation: highlight-pulse 1.5s ease;
        }
        
        @keyframes highlight-pulse {
            0% { box-shadow: 0 0 0 0 rgba(238, 108, 77, 0.7); transform: scale(1); }
            50% { box-shadow: 0 0 0 10px rgba(238, 108, 77, 0); transform: scale(1.05); }
            100% { box-shadow: 0 0 0 0 rgba(238, 108, 77, 0); transform: scale(1); }
        }

        /* Shop by Category Section */
        .shop-category-section {
            background-color: #f9f9f9;
            padding: 20px 0;
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .category-card {
            background-color: white;
            border-radius: 8px;
            padding: 15px;
            height: 100%;
            transition: transform 0.2s;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            cursor: pointer;
        }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.12);
        }
        
        .category-filter .category-card.active {
            border: 2px solid var(--main-color);
            background-color: rgba(58, 124, 165, 0.1);
        }

        .category-card img {
            width: 100%;
            height: 130px;
            object-fit: contain;
            background: white;
            margin-bottom: 10px;
        }

        .category-card h6 {
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 0;
            color: #333;
            text-align: center;
        }

        .category-scroll-container {
            position: relative;
            width: 100%;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none; /* Firefox */
            -ms-overflow-style: none; /* IE and Edge */
            padding: 5px 0;
        }
        
        .category-scroll-container::-webkit-scrollbar {
            display: none; /* Chrome, Safari, Opera */
        }
        
        .category-scroll-wrapper {
            display: flex;
            flex-wrap: nowrap;
            gap: 16px;
            padding: 10px 5px;
        }
        
        .category-card-item {
            flex: 0 0 auto;
            width: 180px;
        }
        
        @media (max-width: 576px) {
            .category-card-item {
                width: 150px;
            }
        }
        
        .scroll-controls {
            display: flex;
        }
        
        .scroll-left, .scroll-right {
            cursor: pointer;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            border-radius: 50%;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        /* Add transition for product filtering */
        .product-item {
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
        }
        
        .product-item.filtering-hide {
            opacity: 0;
            transform: scale(0.95);
            pointer-events: none;
        }
        
        .product-item.filtering-show {
            opacity: 1;
            transform: scale(1);
        }
    </style>

    <div class="container-fluid px-4 mt-4">
        <!-- Shop Hero Section -->
        <div class="shop-hero mb-4">
            <div class="container hero-content">
                <div class="row">
                    <div class="col-md-8">
                        <h1 class="shop-title display-5 fw-bold mb-2">Community Marketplace</h1>
                        <p class="lead mb-4">Discover fresh, local products from trusted vendors in your community</p>
                        <p class="d-none d-md-block">Support local businesses and enjoy quality products delivered
                            directly to you</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Sort -->
        <div class="container-fluid px-0 mb-4">
            <div class="row g-3">
                <!-- Search Bar -->
                <div class="col-md-8">
                    <div class="input-group search-bar">
                        <input type="text" id="product-search" class="form-control rounded-pill-start" placeholder="Search for products, brands, or categories...">
                        <button class="btn btn-primary rounded-pill-end" type="button" id="search-button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div id="search-suggestions" class="search-suggestions"></div>
                </div>
                <!-- Sort Options -->
                <div class="col-md-4">
                    <select id="sort-products" class="form-select">
                        <option value="default">Recommended</option>
                        <option value="price-asc">Price: Low to High</option>
                        <option value="price-desc">Price: High to Low</option>
                        <option value="name-asc">Name: A to Z</option>
                        <option value="name-desc">Name: Z to A</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Flash Messages -->
        <% if (messages && messages.success && messages.success.length> 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

        <!-- Featured Products Carousel -->
        <div class="container-fluid px-0 mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0 fw-bold">Featured Products</h4>
                <a href="#" class="text-decoration-none">View All <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
            <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="row g-3">
                            <% items.slice(0, 4).forEach(item => { %>
                                <div class="col-6 col-md-3">
                                    <div class="product-card h-100">
                                        <div class="product-img-container">
                                            <% if (item.imageUrl) { %>
                                                <img src="<%= item.imageUrl %>" class="product-img" alt="<%= item.itemName %>">
                                            <% } else { %>
                                                <div class="bg-light d-flex align-items-center justify-content-center h-100">
                                                    <i class="fas fa-image fa-3x text-secondary opacity-25"></i>
                                                </div>
                                            <% } %>
                                            <div class="product-badge bg-danger text-white">Featured</div>
                                        </div>
                                        <div class="product-details d-flex flex-column h-100">
                                            <h5 class="product-title"><%= item.itemName %></h5>
                                            <div class="product-meta">
                                                <div>
                                                    <div class="product-price">₹<%= item.costPerUnit.toFixed(2) %></div>
                                                    <small class="product-unit">per <%= item.unit %></small>
                                                </div>
                                            </div>
                                            <a href="#quickViewModal<%= item._id %>" data-bs-toggle="modal" class="btn btn-outline-primary mt-2">
                                                <i class="fas fa-eye me-2"></i>Quick View
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="row g-3">
                            <% items.slice(4, 8).forEach(item => { %>
                                <div class="col-6 col-md-3">
                                    <div class="product-card h-100">
                                        <div class="product-img-container">
                                            <% if (item.imageUrl) { %>
                                                <img src="<%= item.imageUrl %>" class="product-img" alt="<%= item.itemName %>">
                                            <% } else { %>
                                                <div class="bg-light d-flex align-items-center justify-content-center h-100">
                                                    <i class="fas fa-image fa-3x text-secondary opacity-25"></i>
                                                </div>
                                            <% } %>
                                            <div class="product-badge bg-danger text-white">Featured</div>
                                        </div>
                                        <div class="product-details d-flex flex-column h-100">
                                            <h5 class="product-title"><%= item.itemName %></h5>
                                            <div class="product-meta">
                                                <div>
                                                    <div class="product-price">₹<%= item.costPerUnit.toFixed(2) %></div>
                                                    <small class="product-unit">per <%= item.unit %></small>
                                                </div>
                                            </div>
                                            <a href="#quickViewModal<%= item._id %>" data-bs-toggle="modal" class="btn btn-outline-primary mt-2">
                                                <i class="fas fa-eye me-2"></i>Quick View
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <!-- Category Filters -->
        <section class="shop-category-section mb-4">
            <div class="container-fluid px-4">
                <div class="row mb-3">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <h2 class="section-title">Shop by Category</h2>
                        <div class="scroll-controls d-none d-md-flex">
                            <button class="btn btn-sm btn-light me-2 scroll-left"><i class="fas fa-chevron-left"></i></button>
                            <button class="btn btn-sm btn-light scroll-right"><i class="fas fa-chevron-right"></i></button>
                        </div>
                    </div>
                </div>
                
                <div class="category-scroll-container">
                    <div class="category-scroll-wrapper">
                        <!-- Categories Row -->
                        <div class="category-card-item category-filter" data-category="All Items">
                            <div class="category-card">
                                <img src="/uploads/categories/AllItems.jpeg" alt="All Items">
                                <h6 class="mt-2 text-center">All Items</h6>
                            </div>
                        </div>
                        
                        <div class="category-card-item category-filter" data-category="Fruits & Vegetables">
                            <div class="category-card">
                                <img src="/uploads/categories/fruits-vegetables.jpg" alt="Fruits & Vegetables">
                                <h6 class="mt-2 text-center">Fruits & Vegetables</h6>
                            </div>
                        </div>
                        
                        <div class="category-card-item category-filter" data-category="Dairy, Bread & Eggs">
                            <div class="category-card">
                                <img src="/uploads/categories/dairy-bread-eggs.jpg" alt="Dairy, Bread & Eggs">
                                <h6 class="mt-2 text-center">Dairy, Bread & Eggs</h6>
                            </div>
                        </div>
                        
                        <div class="category-card-item category-filter" data-category="Cold Drinks & Juices">
                            <div class="category-card">
                                <img src="/uploads/categories/cold-drinks.jpg" alt="Cold Drinks & Juices">
                                <h6 class="mt-2 text-center">Cold Drinks & Juices</h6>
                            </div>
                        </div>
                        
                        <div class="category-card-item category-filter" data-category="Snacks & Munchies">
                            <div class="category-card">
                                <img src="/uploads/categories/snacks.jpg" alt="Snacks & Munchies">
                                <h6 class="mt-2 text-center">Snacks & Munchies</h6>
                            </div>
                        </div>
                        
                        <div class="category-card-item category-filter" data-category="Breakfast & Instant Food">
                            <div class="category-card">
                                <img src="/uploads/categories/breakfast.jpg" alt="Breakfast & Instant Food">
                                <h6 class="mt-2 text-center">Breakfast & Instant Food</h6>
                            </div>
                        </div>
                        
                        <div class="category-card-item category-filter" data-category="Bakery & Biscuits">
                            <div class="category-card">
                                <img src="/uploads/categories/biscuits.jpg" alt="Bakery & Biscuits">
                                <h6 class="mt-2 text-center">Bakery & Biscuits</h6>
                            </div>
                        </div>
                        
                        <div class="category-card-item category-filter" data-category="Tea, Coffee & Health Drink">
                            <div class="category-card">
                                <img src="/uploads/categories/tea-coffee.jpg" alt="Tea, Coffee & Health Drink">
