                button.addEventListener('click', function () {
                    console.log('Minus button clicked');
                    const container = this.parentElement;
                    const input = container.querySelector('input[type="number"]');

                    if (!input) {
                        console.error('Could not find input element');
                        return;
                    }

                    let currentVal = parseInt(input.value) || 1;
                    if (currentVal > 1) {
                        input.value = currentVal - 1;
                        console.log('Decreased value to', input.value);
                    }
                });
            });

            // Handle plus buttons
            document.querySelectorAll('.plus-btn').forEach(button => {
                button.addEventListener('click', function () {
                    console.log('Plus button clicked');
                    const container = this.parentElement;
                    const input = container.querySelector('input[type="number"]');

                    if (!input) {
                        console.error('Could not find input element');
                        return;
                    }

                    let currentVal = parseInt(input.value) || 1;
                    let maxVal = parseInt(input.getAttribute('max')) || 100;

                    if (currentVal < maxVal) {
                        input.value = currentVal + 1;
                        console.log('Increased value to', input.value);
                    } else {
                        console.log('Already at maximum value:', maxVal);
                    }
                });
            });

            // Enforce min/max constraints on direct input
            document.querySelectorAll('.quantity-input').forEach(input => {
                input.addEventListener('change', function () {
                    const min = parseInt(this.getAttribute('min')) || 1;
                    const max = parseInt(this.getAttribute('max')) || 100;
                    let value = parseInt(this.value) || min;

                    if (value < min) {
                        this.value = min;
                        console.log('Value below minimum, reset to', min);
